generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = "mongodb://127.0.0.1:27017/tienthanh?directConnection=true&&replicaSet=rs0" // uses connection pooling
}

model User {
    id    String  @id @default(auto()) @map("_id") @db.ObjectId
    email String  @unique
    name  String?
}

model Post {
    id        String  @id @default(auto()) @map("_id") @db.ObjectId
    authorId  String? @db.ObjectId
    content   String?
    published Boolean @default(false)
    title     String
}

type Image {
    url        String
    createDate DateTime @default(now())
    with       Int
    height     Int
    name       String
}

model Info {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    tiles       String   @default("")
    summary     String   @default("")
    description String   @default("")
    thumbnailId String   @db.ObjectId
    thumbnail   Image?  
    bannerIds   String[] @db.ObjectId
    banners     Image[]  

    @@map(name: "info")
}
